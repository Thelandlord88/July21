---
// src/components/ContactCard.astro
import { Image } from 'astro:assets';
import beforeImage from '~/assets/images/before.png';
const phone = "0405779420";
const email = "info@onendonebondclean.com.au";
const fb    = "https://facebook.com/OneNDoneBondClean";
---

<div class="font-sans flex justify-center items-center p-5 w-full">
  <div
    class="group w-full max-w-md grid grid-cols-1 md:grid-cols-[1fr,2fr] bg-white rounded-2xl shadow-lg border border-slate-200 overflow-hidden
           transition-all duration-500 ease-[cubic-bezier(0.22,1,0.36,1)]
           hover:shadow-2xl hover:[transform:perspective(1200px)_rotateX(3deg)_rotateY(-10deg)_scale3d(1.05,1.05,1.05)]"
    aria-label="Contact Card"
  >
    <!-- Left gradient panel -->
    <div
      class="relative min-h-[260px] md:col-span-1 flex flex-col items-center justify-center p-4 text-center overflow-hidden
             bg-[length:200%_200%] bg-gradient-to-br from-sky-500 via-cyan-600 to-teal-600
             transition-[background-position] duration-700 group-hover:bg-right-bottom"
    >
      <!-- floating bubbles (pure CSS) -->
      <div class="absolute top-1/4 left-1/4 w-8 h-8 bg-white/20 rounded-full animate-float"></div>
      <div class="absolute top-1/3 right-1/4 w-5 h-5 bg-white/30 rounded-full animate-float" style="animation-delay: 0.5s;"></div>
      <div class="absolute bottom-1/4 right-1/3 w-6 h-6 bg-white/25 rounded-full animate-float" style="animation-delay: 1s;"></div>

      <!-- profile image -->
      <div
        class="w-36 aspect-square p-1 rounded-full bg-white border-4 border-white shadow-md
               transition-transform duration-500 ease-[cubic-bezier(0.22,1,0.36,1)]
               group-hover:-translate-y-3 group-hover:rotate-6 group-hover:scale-110"
      >
        <Image
          src={beforeImage}
          alt="A cluttered room awaiting a professional bond clean"
          class="rounded-full w-full h-full object-cover"
        />
      </div>

      <div class="mt-4">
        <h3 class="font-bold text-white text-xl">One N Done</h3>
        <p class="text-white text-sm opacity-90">Bond Cleaning Experts</p>
      </div>
    </div>

    <!-- Right contact panel -->
    <div class="flex flex-col p-4 justify-center">
      <!-- Specialists -->
      <div class="flex items-center gap-3 mb-4">
        <div class="bg-teal-50 rounded-xl p-2">
          <svg class="w-8 h-8 text-sky-500" aria-hidden="true" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 20.957a11.955 11.955 0 015.618-4.016l1.141-.571a12.025 12.025 0 014.5-1.158z" />
          </svg>
        </div>
        <div>
          <h3 class="font-bold text-slate-800 text-base">Trent & Pandora</h3>
          <p class="text-xs text-slate-500">Lead Cleaning Specialists</p>
        </div>
      </div>

      <!-- Contact links -->
      <nav class="flex flex-col gap-2 flex-grow" role="navigation" aria-label="Contact Links">
        <!-- Phone -->
        <a href={`tel:${phone}`} class="group/link flex items-center gap-3 p-2 rounded-xl transition-colors duration-200 hover:bg-teal-50/70 no-underline">
          <div class="flex-shrink-0 w-10 h-10 flex items-center justify-center bg-slate-100 rounded-full transition-colors duration-300 group-hover/link:bg-gradient-to-br group-hover/link:from-sky-500 group-hover/link:to-cyan-600">
            <svg class="w-5 h-5 text-slate-500 transition-colors duration-300 group-hover/link:stroke-white" aria-hidden="true" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 16.92v3a2 2 0 0 1-2.18 2A19.79 19.79 0 0 1 11.19 19.85 19.5 19.5 0 0 1 5.19 13.85 19.79 19.79 0 0 1 2.12 5.18A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
            </svg>
          </div>
          <div>
            <h4 class="font-semibold text-sm text-slate-700 transition-colors group-hover/link:text-cyan-600">Phone</h4>
            <span class="text-xs text-slate-500">{phone.replace(/(\d{4})(\d{3})(\d{3})/, "$1 $2 $3")}</span>
          </div>
        </a>

        <!-- Email -->
        <a href={`mailto:${email}`} class="group/link flex items-center gap-3 p-2 rounded-xl transition-colors duration-200 hover:bg-teal-50/70 no-underline">
          <div class="flex-shrink-0 w-10 h-10 flex items-center justify-center bg-slate-100 rounded-full transition-colors duration-300 group-hover/link:bg-gradient-to-br group-hover/link:from-sky-500 group-hover/link:to-cyan-600">
            <svg class="w-5 h-5 text-slate-500 transition-colors duration-300 group-hover/link:stroke-white" aria-hidden="true" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
              <polyline points="22,6 12,13 2,6"/>
            </svg>
          </div>
          <div>
            <h4 class="font-semibold text-sm text-slate-700 transition-colors group-hover/link:text-cyan-600">Email</h4>
            <span class="text-xs text-slate-500 truncate max-w-[180px]">{email}</span>
          </div>
        </a>

        <!-- Facebook -->
        <a
          href={fb}
          target="_blank"
          rel="noopener noreferrer"
          class="group/link flex items-center gap-3 p-2 rounded-xl transition-colors duration-200 hover:bg-teal-50/70 no-underline">
          <div class="flex-shrink-0 w-10 h-10 flex items-center justify-center bg-slate-100 rounded-full transition-colors duration-300 group-hover/link:bg-gradient-to-br group-hover/link:from-sky-500 group-hover/link:to-cyan-600">
            <svg class="w-5 h-5 text-slate-500 transition-colors duration-300 group-hover/link:stroke-white" aria-hidden="true" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/>
            </svg>
          </div>
          <div>
            <h4 class="font-semibold text-sm text-slate-700 transition-colors group-hover/link:text-cyan-600">Facebook</h4>
            <span class="text-xs text-slate-500 truncate">/OneNDoneBondClean</span>
          </div>
        </a>
      </nav>

      <!-- CTA -->
      <div class="mt-4 pt-4 border-t border-slate-200">
        <a
          href="#quote"
          class="w-full bg-sky-500 text-white font-medium py-2.5 px-4 rounded-lg
                 transition-all duration-300 ease-in-out transform hover:scale-[1.03]
                 hover:bg-gradient-to-r hover:from-sky-500 hover:to-teal-500
                 flex items-center justify-center gap-2 text-sm shadow-md hover:shadow-lg
                 focus-visible:outline-none"
        >
          Get a Free Quote
          <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path d="M5 12h14M12 5l7 7-7 7" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </a>
      </div>
    </div>
  </div>
</div>
